<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_75dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_chat"
        android:layout_width="@dimen/_10dp"
        android:layout_height="@dimen/_10dp"
        android:layout_marginStart="2dp"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toBottomOf="@+id/tv_show_message"
        app:layout_constraintStart_toEndOf="@+id/tv_show_message" />

    <TextView
        android:id="@+id/tv_show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="3dp"
        android:background="@drawable/background_item_left"
        android:fontFamily="@font/avanir5"
        android:maxWidth="240dp"
        android:maxLines="1"
        android:padding="@dimen/_10dp"
        android:text="@string/message"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/iv_profile_chat"
        app:layout_constraintStart_toEndOf="@+id/iv_profile_chat"
        app:layout_constraintTop_toTopOf="@+id/iv_profile_chat" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/iv_profile_chat"
        android:layout_width="@dimen/_35dp"
        android:layout_height="@dimen/_35dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/aisyah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="1dp"
        android:text="@string/time"
        android:textSize="@dimen/_11sp"
        app:layout_constraintStart_toStartOf="@+id/tv_show_message"
        app:layout_constraintTop_toBottomOf="@+id/tv_show_message" />

</androidx.constraintlayout.widget.ConstraintLayout>